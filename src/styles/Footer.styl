footer
	font-family 'Inconsolata', monospace
	display flex
	align-items center
	justify-content center
	flex-direction column
	font-size 1.2em
	position absolute
	bottom 0
	left 0
	text-align center
	width 100vw
	padding 1em

	span
		background-color hsla(0, 0%, 100%, 0.1)

	a
		text-decoration inherit
		cursor pointer
		color inherit
		&.email
			font-weight bold
